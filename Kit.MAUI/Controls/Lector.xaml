<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fonts="clr-namespace:Kit.MAUI.Fonts"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:controls="clr-namespace:Kit.MAUI.Controls"
             mc:Ignorable="d" x:Name="Me"
             x:Class="Kit.MAUI.Controls.Lector">
    <Image
        xct:TouchEffect.PressedScale="0.9"
        xct:TouchEffect.Command="{Binding OpenCameraCommand,Source={x:Reference Me}}">
        <Image.Source>
            <FontImageSource Color="{Binding Color,Source={x:Reference Me}}"
                                 Glyph="{x:Static fonts:FontelloIcons.Camera}"
                                 FontFamily="{x:Static fonts:FontelloIcons.Font}"
                             Size="{Binding FontSize,Source={x:Reference Me}}"/>
        </Image.Source>
    </Image>
</ContentView>